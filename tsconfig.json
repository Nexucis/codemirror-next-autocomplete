{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "target": "es2015",
    "declaration": true,
    "outDir": "./lib",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
